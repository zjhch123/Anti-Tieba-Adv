{  
  "name": "Anti-Tieba-Adv.",  
  "version": "0.2",
  "manifest_version": 2,  
  "description": "清除百度贴吧内的广告",  
  "permissions": [ "contentSettings", "tabs" ],
  "content_scripts": [
    {
      "matches": ["*://tieba.baidu.com/*"],
      "js": ["popup.js"]
    }
  ],
  "run_at": "document_end",
  "browser_action": {  
    "default_icon": "icon.png" ,
    "default_title": "Anti-Tieba-Adv.",
    "default_popup": "popup.html"
  }  
} 